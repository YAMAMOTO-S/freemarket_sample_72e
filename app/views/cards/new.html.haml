.wrapper__card
  .icon
    = image_tag 'http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg'
  .card
    %h3 新規クレジットカード登録
    = form_tag('#', method: :post, id: 'charge-form',  name: "inputForm") do
      .card__number
        .card__number__field
          %label カード番号 
          %span2 必須
          %br
        = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        %br
      .card__date
        .card_date_field
          %label 有効期限
          %span2 必須
          %br
        %select#exp_month{name: "exp_month", type: "text"}
          %option{value: ""} --
          %option{value: "1"}01
          %option{value: "2"}02
          %option{value: "3"}03
          %option{value: "4"}04
          %option{value: "5"}05
          %option{value: "6"}06
          %option{value: "7"}07
          %option{value: "8"}08
          %option{value: "9"}09
          %option{value: "10"}10
          %option{value: "11"}11
          %option{value: "12"}12
        月/
        %select#exp_year{name: "exp_year", type: "text"}
          %option{value: ""} --
          %option{value: "2020"}20
          %option{value: "2021"}21
          %option{value: "2022"}22
          %option{value: "2023"}23
          %option{value: "2024"}24
          %option{value: "2025"}25
          %option{value: "2026"}26
          %option{value: "2027"}27
          %option{value: "2028"}28
          %option{value: "2029"}29
        年
        %br
      .card__code
        %label セキュリティコード
        %span2 必須
        %br
        = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        %br
      .card__name
        %label 名義
        %span2 必須
        %br
        = text_field_tag "name", "", class: "name", placeholder: "例)TAROU FURIMA", type: "text"
        #card_token
      .card__submit
        = submit_tag "追加する", id: "token_submit", class: "card__submit__buttun"