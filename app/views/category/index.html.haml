= render "users/top_header"
.main
  .category-index
    .category
      .category__title
        %h2 カテゴリー一覧
      .category__list--nav
        - @category_parent.each do |parent|  
          = link_to category_index_path(parent), class: "category__list--nav__root" do
            %p 
              = parent.name

      - @category_parent.each do |parent|
        .category__list--box
          .invisual
            .invisual__title
              = link_to category_index_path(parent) do
                %h3
                  = parent.name
            .invisual__list
              = link_to category_index_path(parent), class: "all" do
                %p すべて
              
              - parent.children.each do |children|
                .invisual__list__sub-category-name
                  = link_to category_index_path(children), class: "invisual__list__sub-category-name" do
                    %h4
                      = children.name
                  
                      .child_box
                        .child_box__list
                          = link_to "すべて", category_index_path(children), class: "child_box__list__all"

                        - children.children.each do |grandchild|
                          = link_to category_index_path(grandchild), class: "child_box__list" do
                            = grandchild.name
= render "users/footer_top"