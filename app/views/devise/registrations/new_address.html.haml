%h2 住所情報登録
= form_for @address do |f|
  = render "devise/shared/error_messages", resource: @address
  .field
    = f.label :first_name
    %br/
    = f.text_field :first_name
  .field
    = f.label :first_name_kana
    %br/
    = f.text_field :first_name_kana
  .field
    = f.label :last_name
    %br/
    = f.text_field :last_name
  .field
    = f.label :last_name_kana
    %br/
    = f.text_field :last_name_kana
  .field
    = f.label :postal
    %br/
    = f.text_field :postal

  .field
    = f.label :prefecture
    %br/
    = f.text_field :prefecture

  .field
    = f.label :municipality
    %br/
    = f.text_field :municipality
  .field
    = f.label :address
    %br/
    = f.text_field :address

  .field
    = f.label :discription
    %br/
    = f.text_field :discription
  .field
    = f.label :phone_number
    %br/
    = f.text_field :phone_number


  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
