<%= form_with model: @item, local: true do |f| %>

  <%= f.text_field :name, placeholder: :商品名 %>
  <%= f.text_area :text, placeholder: :商品説明 %>
  <%= f.number_field :price, placeholder: :値段 %>
  <%= f.select :status, [ ["新品,未使用","新品,未使用"], ["未使用に近い", "未使用に近い"], 
    ["目立った傷や汚れなし", "目立った傷や汚れなし" ] ,["やや傷, 汚れあり", "やや傷, 汚れあり"], 
    ["汚れあり", "汚れあり"], ["状態が悪い", "状態が悪い"] ], prompt: "商品の状態" %>

  <%= f.text_field :delivery_fee, placeholder: :送料 %>
  <%= f.text_field :shipping_day, placeholder: :予定日数 %>
  
  <%= f.submit '出品する', class: :form__btn %>
<% end %>

<p>image とtag は後日</p>