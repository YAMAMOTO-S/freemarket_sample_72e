= render "users/top_header"
%nav.breadCrumbs
  %ul
    %li
      = link_to 'FURIMA', '#'
    %li
      %i.fas.fa-angle-right
    %li
      = link_to 'ベビー・キッズ', '#'
    %li
      %i.fas.fa-angle-right
    %li
      = link_to 'ベビー服(男女兼用) ~95cm', '#'
    %li
      %i.fas.fa-angle-right
    %li
      = link_to 'アウター', '#'
    %li
      %i.fas.fa-angle-right
    %li
      %p
        = @item.name
.main
  .showMain
    .contentLeftpp
    .contentRight
      .topContent
        .itemBox
          %h2.itemBox__name
            = @item.name
          .itemBox__body
            %ul
              %li
            
                -# - objects = @item.images
                -# - objects.each.with_index do |object, index|
                -#   = image_tag object.img_url
                = image_tag @item.images[0].img_url
                  
                %ul
                  %li
                    - if @item.images[1]
                      = image_tag @item.images[1].img_url, height: '75', width: '75'
                  %li
                    - if @item.images[2]
                      = image_tag @item.images[2].img_url, height: '75', width: '75'
                  %li
                    - if @item.images[3]
                      = image_tag @item.images[3].img_url, height: '75', width: '75'
          .itemBox__price
            %span
              = "¥#{@item.price.to_s}"
              
            .itemBox__price--detail
              %span
                (税込)
              %span
                送料込み
          .itemDetaill
            = @item.text
            
          .table
            %table
              %tbody
                %tr
                  %th 出品者
                  %td 
                    = @user.nickname
                %tr
                  %th カテゴリー
                  %td
                    = link_to @item.category.parent.parent.name, '#'
                    %br
                    = link_to ">#{@item.category.parent.name}", '#'
                    %br
                    = link_to ">#{@item.category.name}", '#'
                %tr
                  %th ブランド
                  %td
                    
                %tr
                  %th 商品のサイズ
                  %td 
                    
                %tr
                  %th 商品の状態
                  %td
                    = @item.status
                %tr
                  %th 配送料の負担
                  %td 
                    = @item.delivery_fee
                %tr
                  %th 発送元の地域
                  %td
                    = @item.from_area
                %tr
                  %th 発送日の目安
                  %td 
                    = @item.shipping_day
          .optionalArea
            %ul
              %li#favoriteBtn.optionalBtn.favoriteBtn
                
              - if user_signed_in?
                - if @item.favorite_user(current_user.id)
                  = button_to item_favorite_path(@item), method: :delete, id: "favoriteBtn", remote: true do
                    お気に入り
                    %i.fas.fa-star
                    %span
                      = @item.favorites_count
                - else
                  = button_to item_favorites_path(@item), id: "favoriteBtn", remote: true do
                    お気に入り
                    %i.far.fa-star
                    %span
                      = @item.favorites_count
              - else
                %i.fas.fa-star
                %span
                  = @item.favorites_count


              -# - if @favoraite
              -#   = link_to "/items/#{@item.id}/favoraites", method: :delete
              -#   %i.fas.fa-star
              -# - else
              -#   = link_to "/items/#{@item.id}/favoraites", method: :post
              -#   %i.fas.fa-star
              -# = @item.favorite_count.to_s









            %ul.optional
              %li.optionalBtn
                = link_to '#' do
                  %i.fas.fa-flag
                    不適切な商品の通報

        - if user_signed_in? && current_user.id == @item.user_id 
          .EditAndDestroy
            .edit-btn
              = link_to '編集する', "/items/#{@item.id}/edit", method: :get
            .delete-btn
              = link_to '出品を削除する', "/items/#{@item.id}", method: :delete
        
        .commentBox
          .comments
            - if @comments 
              - @comments.each do |comment|
                %p.message
                  %strong
                    = link_to comment.user.nickname, "/users/#{comment.user_id}"
                    さん：
                    = comment.text
            - else
            　


          %p.noticeMsg
            相手のことを考え丁寧なコメントを心がけましょう。
            %br
            不快な言葉遣いなどは利用制限や退会処分となることがあります。

          %ul.commentBox__contents
          - if current_user
            = form_with(model: [@item, @comment], local: true, id: "new_comment") do |form|
              = form.text_area :text, placeholder: "", rows: "２",class: 'textbox'
              = form.submit "コメントする", class: 'form__submit'
          - else
            %strong
              %p  商品の購入、コメントの投稿には新規登録/ログインが必要です 

          - if user_signed_in? && current_user.id != @item.user_id 
            .buy-button
              = link_to '購入確認画面へ', class:"buy-confilm"

      %ul.links
        %li
          = link_to '#' do
            %i.fas.fa-angle-left
            %span
            前の商品
        %li
          = link_to '#' do
            %span
            後ろの商品
            %i.fas.fa-angle-right
      .relatedItems
        = link_to 'ベビー・キッズをもっと見る', '#'
        .productLists
= render "users/footer_top"
